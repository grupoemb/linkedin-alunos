    <h1>An√°lise de Perfil LinkedIn</h1>
    <p>Envie seu perfil do LinkedIn em formato PDF e seu e-mail para receber a an√°lise personalizada desenvolvida pelos Bionic's by EMB.</p>

    <div id="upload-form">
        <div>
            <label for="email">Seu E-mail:</label>
            <input type="email" id="email" name="email" placeholder="seu.email@exemplo.com" required>
        </div>
        <div>
            <label for="linkedinPdf">Seu LinkedIn (Arquivo PDF):</label>
            <input type="file" id="linkedinPdf" name="linkedinPdf" accept=".pdf" required>
        </div>
        <button type="button" id="submit-button" onclick="processarFormulario()">Enviar para An√°lise</button>
    </div>

    <div id="status" class="hidden"></div>

    <script>
        const form = document.getElementById('upload-form');
        const statusDiv = document.getElementById('status');
        const submitButton = document.getElementById('submit-button');

        // --------------- URL DO SEU WEBHOOK N8N DE PRODU√á√ÉO ---------------
        const N8N_WEBHOOK_URL = 'https://grupoemb.app.n8n.cloud/webhook/9fcd7775-6bd0-4217-bcd2-5383cc807034';
        // --------------- URL DO SEU WEBHOOK N8N DE PRODU√á√ÉO ---------------

        // PRIMEIRA A√á√ÉO: Enviar dados para o webhook
        async function primeiraAcao(formData, email, file) {
            console.log("Executando primeira a√ß√£o: Enviando dados para webhook...");
            
            // Envia os dados para o Webhook N8N usando Fetch API
            const response = await fetch(N8N_WEBHOOK_URL, {
                method: 'POST',
                body: formData // FormData lida com multipart/form-data para o arquivo
            });

            // Tenta ler a resposta JSON do N8N
            const result = await response.json();
            
            console.log("Primeira a√ß√£o conclu√≠da: Dados enviados");
            return { response, result };
        }

        // SEGUNDA A√á√ÉO: Disparar pixel do Facebook e redirecionar
        function segundaAcao() {
            console.log("Executando segunda a√ß√£o: Disparando pixel e redirecionando...");
            
            // Dispara o pixel do Facebook
            fbq('track', 'Lead');
            
            // Redireciona para a p√°gina
            const meta = document.createElement('meta');
            meta.httpEquiv = "refresh";
            meta.content = "0;url=http://eumebanco-ctc.lovable.app";
            document.head.appendChild(meta);
            
            console.log("Segunda a√ß√£o conclu√≠da: Pixel disparado e redirecionamento ativado");
        }

        // FUN√á√ÉO PRINCIPAL QUE PROCESSA O FORMUL√ÅRIO
        async function processarFormulario() {
            console.log("üöÄ BOT√ÉO CLICADO - Iniciando processo...");
            statusDiv.className = 'hidden'; // Esconde status anterior ao tentar novo envio

            // Pega os dados do formul√°rio
            const email = document.getElementById('email').value;
            const fileInput = document.getElementById('linkedinPdf');
            const file = fileInput.files[0];

            console.log("üìß Email:", email);
            console.log("üìÑ Arquivo:", file ? file.name : "Nenhum arquivo");

            // Valida√ß√µes b√°sicas no lado do cliente
            if (!email || !file) {
                console.log("‚ùå ERRO: Campos obrigat√≥rios n√£o preenchidos");
                statusDiv.textContent = 'Erro: Preencha o e-mail e selecione um arquivo PDF.';
                statusDiv.className = 'error'; // Mostra erro
                return;
            }
             if (!file.name.toLowerCase().endsWith('.pdf')) {
                console.log("‚ùå ERRO: Arquivo n√£o √© PDF");
                statusDiv.textContent = 'Erro: O arquivo precisa ser um PDF.';
                 statusDiv.className = 'error'; // Mostra erro
                 return;
             }
             // Valida√ß√£o simples de formato de email
             if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
                console.log("‚ùå ERRO: Email inv√°lido");
                statusDiv.textContent = 'Erro: Formato de e-mail inv√°lido.';
                 statusDiv.className = 'error'; // Mostra erro
                 return;
             }

            console.log("‚úÖ Valida√ß√µes OK - Iniciando envio...");

            // Feedback visual de processamento
            statusDiv.textContent = 'Enviando dados... Aguarde um momento.';
            statusDiv.className = 'processing'; // Mostra status
            submitButton.disabled = true; // Desabilita bot√£o durante envio

            try {
                // Cria FormData manualmente
                const formData = new FormData();
                formData.append('email', email);
                formData.append('linkedinPdf', file);

                // EXECUTA AS DUAS A√á√ïES EM SEQU√äNCIA
                console.log("üîÑ Executando primeira a√ß√£o...");
                const { response, result } = await primeiraAcao(formData, email, file);
                
                // Verifica se a primeira a√ß√£o foi bem-sucedida
                if (response.ok) {
                    console.log("‚úÖ PRIMEIRA A√á√ÉO OK: resposta recebida");
                    statusDiv.textContent = 'Seu envio foi realizado com sucesso!';
                    statusDiv.className = 'success';
                    
                    // Limpa o formul√°rio
                    document.getElementById('email').value = '';
                    document.getElementById('linkedinPdf').value = '';
                    
                    // Executa a segunda a√ß√£o
                    console.log("üîÑ Executando segunda a√ß√£o...");
                    segundaAcao();
                } else {
                    // Se a primeira a√ß√£o falhar, n√£o executa a segunda
                    console.log("‚ùå PRIMEIRA A√á√ÉO FALHOU:", response.status);
                    const errorMessage = result.message || `Erro ${response.status} ao contatar o servidor.`;
                    statusDiv.textContent = `Falha no envio: ${errorMessage}. Por favor, tente novamente.`;
                    statusDiv.className = 'error'; // Aplica estilo de erro
                    submitButton.disabled = false; // Reabilita o bot√£o em caso de erro
                }

            } catch (error) {
                // Captura erros de rede (ex: N8N offline, sem internet)
                console.error('‚ùå ERRO na requisi√ß√£o fetch:', error);
                statusDiv.textContent = 'Erro de conex√£o ao enviar. Verifique sua internet ou tente mais tarde.';
                statusDiv.className = 'error'; // Aplica estilo de erro
                submitButton.disabled = false; // Reabilita o bot√£o
            }
            // Nota: O bot√£o s√≥ √© reabilitado em caso de erro para evitar envios m√∫ltiplos.
        }
    </script>
